<script src="./js/speech_recognition.js" defer></script>
<main class="px-3">
    <div>
        <h2>Voice Note</h2>
        <p class="lead">Start recording, say your words and save !!!</p>
        <br>
        <button type="button" class="btn btn-outline-danger" onclick="startRecording()">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-record-fill" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 13A5 5 0 1 0 8 3a5 5 0 0 0 0 10z"/>
            </svg>
            Start recording
        </button>
        <button type="button" class="btn btn-outline-success" id="stop">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-stop-fill" viewBox="0 0 16 16">
                <path d="M5 3.5h6A1.5 1.5 0 0 1 12.5 5v6a1.5 1.5 0 0 1-1.5 1.5H5A1.5 1.5 0 0 1 3.5 11V5A1.5 1.5 0 0 1 5 3.5z"/>
            </svg>
            Stop recording
        </button>
        <br>
        <br>
        <br>
        <p></p>
        <form action="/voiceNote" method="POST">
        <div class="d-grid gap-2 col-6 mx-auto">
            
            <div class="row">
                <div class="col-auto">
                  <label for="inputTitle" class="lead">Title</label>
                </div>
                <div class="col">
                  <input id="title" name="title" type="text" class="form-control" required>
                </div>
                <div class="invalid-feedback">
                    Please select a valid state.
                  </div>
            </div>
            <textarea class="form-control" id="wordsContainer" name="wordsContainer" rows="8" required></textarea>
            <p></p>
            <button class="btn btn-normal" type="submit">SAVE</button>
        </div>
    </form>
    </div>
</main>