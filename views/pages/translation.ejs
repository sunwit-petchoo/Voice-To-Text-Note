<script src="./js/speechRecTranslate.js" defer></script>
<main class="px-3">
    <div>
        <h2>Translation</h2>
        <p class="lead">Translate spoken words or phrases by start recording  !!!</p>
        <br>
        <form method="POST" action="/translation">
            <button type="button" class="btn btn-outline-danger" onclick="startRecording()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-record-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 13A5 5 0 1 0 8 3a5 5 0 0 0 0 10z"/>
                </svg>
                Start recording
            </button>
            <button type="button" class="btn btn-outline-success" id="stop">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-stop-fill" viewBox="0 0 16 16">
                    <path d="M5 3.5h6A1.5 1.5 0 0 1 12.5 5v6a1.5 1.5 0 0 1-1.5 1.5H5A1.5 1.5 0 0 1 3.5 11V5A1.5 1.5 0 0 1 5 3.5z"/>
                </svg>
                Stop recording
            </button>
            <br>
            <br>
            <br>
            <div class="d-grid gap-2 col-6 mx-auto">
                <div class="container">
                    <div class="row align-items-start">
                        <div class="col">
                            <div class="row title">
                                <div class="col-auto">
                                    <label for="detectedlanguage" class="lead">Translate from</label>
                                </div>
                                <div class="col">
                                    <input id="inputTitle" name="inputTitle" type="text" class="form-control" value="English" disabled readonly>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row title">
                                <div class="col-auto">
                                    <label for="inputTitle" class="lead">To</label>
                                </div>
                                <div class="col">
                                    <select class="form-select" aria-label="Default select example" name="selected_lang" id="selected_lang">
                                        <% for (var i=1; i<lang_key.length-2; i++) { %>
                                            <option value="<%= lang_key[i]%>"><%= lang_value[i]%></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-start">
                        <div class="col">
                            <textarea class="form-control" id ="wordsContainer" name="input_voice" rows="11"></textarea>
                        </div>
                        <div class="col">
                            <textarea class="form-control" name="output_translate" id="output_translate" rows="11"><%= output_translate %></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>